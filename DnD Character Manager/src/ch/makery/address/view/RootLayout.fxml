<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="655.0" maxWidth="1280.0" prefHeight="655.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="partyMenu" mnemonicParsing="false" text="Party Options">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About" />
              <MenuItem mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
            </items>
          </Menu>
          <Menu fx:id="gmMenu" mnemonicParsing="false" text="GM Options">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleCreateGM" text="Create new player" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
